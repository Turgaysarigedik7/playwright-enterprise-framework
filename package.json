{
  "name": "playwright-pom-tr",
  "version": "1.0.0",
  "description": "Playwright JS ile POM Otomasyon Test Projesi",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:sanity": "playwright test --grep @sanity",
    "test:legacyCreate": "cross-env ENV=legacyCreate npx playwright test",
    "test:staging": "cross-env ENV=staging npx playwright test",
    "test:legacyCreate:smoke": "cross-env ENV=legacyCreate npx playwright test --grep @smoke",
    "test:staging:smoke": "cross-env ENV=staging npx playwright test --grep @smoke",
    "codegen": "node utils/codegen.js",
    "codegen:auth": "node utils/codegen.js --auth",
    "codegen:stealth": "node utils/codegen.js --stealth",
    "codegen:stealth-save": "node utils/codegen.js --stealth --save",
    "codegen:reset": "rimraf playwright/.auth/recorder_user.json",
    "clean": "rimraf playwright-report test-results pacts/logs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@pact-foundation/pact": "^16.0.4",
    "@playwright/test": "^1.40.0",
    "cross-env": "^10.1.0",
    "rimraf": "^6.1.2"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^17.2.3"
  }
}